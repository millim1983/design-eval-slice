{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvaluationRecord",
  "type": "object",
  "required": ["submission_id", "judge_id", "rubric_version", "scores"],
  "properties": {
    "submission_id": {"type": "string"},
    "judge_id": {"type": "string"},
    "rubric_version": {"type": "string"},
    "scores": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["criteria_id", "score"],
        "properties": {
          "criteria_id": {"type": "string"},
          "score": {"type": "number"},
          "reason": {"type": "string"},
          "citation_ids": {"type": "array", "items": {"type": "string"}},
          "checks": {"type": "object"}
        }
      }
    },
    "model_suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "criteria_id": {"type": "string"},
          "suggested_score": {"type": "number"},
          "explanation": {"type": "string"},
          "citation_ids": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "submitted_at": {"type": "string", "format": "date-time"}
  }
}
